<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
            <record model="ir.ui.view" id="volunteer_viwe_form">
                <field name="name">volunteer.volunteer.form</field>
                <field name="model">volunteer.volunteer</field>
                <field name="arch" type="xml">
                    <form string="Volunteer form">
                        <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="volunteer_id"/>
                            </group>
                            <group>
                                <field name="tasks_ids"/>
                            </group>
                        </group>
                        </sheet>
                    </form>
                </field>
        </record>

        <record model="ir.ui.view" id="volunteer_viwe_lis">
            <field name="name">volunteer.volunteer.list</field>
            <field name="model">volunteer.volunteer</field>
            <field name="arch" type="xml">
                <tree string="Volunteer List">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="volunteer_report" model="ir.actions.report">
            <field name="name">Volunteer Report</field>
            <field name="model">volunteer.volunteer</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">cooperative_volunteers.report_volunteer_document</field>
            <field name="report_file">cooperative_volunteers.volunteer_task</field>
            <field name="binding_model_id" ref="model_volunteer_volunteer"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>