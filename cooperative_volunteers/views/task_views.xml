<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="task_view_form">
            <field name="name">volunteer.task.form</field>
            <field name="model">volunteer.task</field>
            <field name="arch" type="xml">
                <form string="Task form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="active"/>
                                <field name="leader"/>
                            </group>
                            <group>
                                <field name="frecuency"/>
                                <group>
                                <field name="state"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                            </group>
                        </group>
                        <notebook>
                            <page string="description">
                                <field name="description"/>
                            </page>
                            <page string="volunteer">
                                <field name="volunteer_ids"/>
                            </page>
                            <page string="requests">
                                <field name="request_approvals_id"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="task_view_list">
            <field name="name">volunteer.task.list</field>
            <field name="model">volunteer.task</field>
            <field name="arch" type="xml">
            <tree string="Task List">
                <field name="name"/>
                <field name="description"/>
                <field name="frecuency"/>
                <field name="start_date"/>
                <field name="end_date"/>
            </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="task_view_search">
            <field name="name">volunteer.task.search</field>
             <field name="model">volunteer.task</field>
             <field name="arch" type="xml">
                 <search>
                     <field name="name"/>
                     <field name="description"/>
                 </search>
            </field>
        </record>

        <record model="ir.ui.view" id="task_view_gantt">
            <field name="name">volunteer.task.gantt</field>
            <field name="model">volunteer.task</field>
            <field name="arch" type="xml">
                <gantt date_start="start_date" date_stop="end_date" default_group_by="leader" default_scale="day"
                color="leader"/>
            </field>
        </record>

         <record id="task_report" model="ir.actions.report">
            <field name="name">Task Report</field>
            <field name="model">volunteer.task</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">cooperative_volunteers.report_task_document</field>
            <field name="report_file">cooperative_volunteers.report_task</field>
            <field name="binding_model_id" ref="model_volunteer_task"/>
            <field name="binding_type">report</field>
        </record>
    </data>
</odoo>