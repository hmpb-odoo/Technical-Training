<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="task_view_form">
            <field name="name">volunteer.task.form</field>
            <field name="model">volunteer.task</field>
            <field name="arch" type="xml">
                <form string="Task form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="frecuency"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="task_view_list">
            <field name="name">volunteer.task.list</field>
            <field name="model">volunteer.task</field>
            <field name="arch" type="xml">
            <tree string="Task List">
                <field name="name"/>
                <field name="description"/>
                <field name="frecuency"/>
            </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="task_view_search">
            <field name="name">volunteer.task.search</field>
             <field name="model">volunteer.task</field>
             <field name="arch" type="xml">
                 <search>
                     <field name="name"/>
                     <field name="description"/>
                 </search>
            </field>
        </record>
    </data>
</odoo>